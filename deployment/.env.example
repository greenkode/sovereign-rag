# SovereignRAG Self-Hosted Configuration
# Copy this file to .env and configure for your environment

# ==============================================================================
# VERSION
# ==============================================================================
VERSION=latest

# ==============================================================================
# LICENSE
# ==============================================================================
# Contact sales@sovereignrag.ai for your license key
SOVEREIGNRAG_LICENSE_KEY=your-license-key-here

# ==============================================================================
# DATABASE CONFIGURATION
# ==============================================================================
POSTGRES_DB=sovereignrag
POSTGRES_USER=sovereignrag
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD
POSTGRES_PORT=5432

# ==============================================================================
# REDIS CONFIGURATION
# ==============================================================================
REDIS_PASSWORD=CHANGE_ME_REDIS_PASSWORD
REDIS_PORT=6379

# ==============================================================================
# JWT CONFIGURATION
# ==============================================================================
# Generate with: openssl rand -base64 32
JWT_SECRET=CHANGE_ME_JWT_SECRET_MIN_32_CHARS_REQUIRED

# ==============================================================================
# SERVICE PORTS
# ==============================================================================
CORE_PORT=8000
IDENTITY_PORT=9093
AUDIT_PORT=9080
OLLAMA_PORT=11434

# ==============================================================================
# OLLAMA / LLM CONFIGURATION
# ==============================================================================
# Models to use for RAG
OLLAMA_MODEL=gpt-oss:20b-cloud
OLLAMA_EMBEDDING_MODEL=jeffh/intfloat-multilingual-e5-large:q8_0
OLLAMA_GUARDRAIL_MODEL=gpt-oss:20b-cloud

# ==============================================================================
# APPLICATION CONFIGURATION
# ==============================================================================
SPRING_PROFILES_ACTIVE=production

# Base URLs (change if using reverse proxy)
IDENTITY_BASEURL=http://localhost:9093
CORE_MS_BASE_URL=http://localhost:8000
AUDIT_MS_BASE_URL=http://localhost:9080

# CORS Configuration
ALLOWED_CORS_ORIGINS=*
CORS_ALLOWED_ORIGINS=*

# Admin features
ADMIN_ENABLED=true

# Development tenant (disable in production)
DEV_TENANT_ENABLED=false
DEV_TENANT_ID=dev
DEV_TENANT_NAME=Development Tenant
DEV_TENANT_API_KEY=dev-api-key-12345

# ==============================================================================
# HAZELCAST (Distributed Cache)
# ==============================================================================
HAZELCAST_MEMBERS=127.0.0.1:5702

# ==============================================================================
# GUARDRAILS CONFIGURATION
# ==============================================================================
GUARDRAILS_ENABLED=true
GUARDRAILS_LOG_VIOLATIONS=true
GUARDRAILS_PROMPT_INJECTION=true
GUARDRAILS_JAILBREAK=true
GUARDRAILS_PII_DETECTION=true
GUARDRAILS_SOCIAL_ENGINEERING=true

# ==============================================================================
# KNOWLEDGE GRAPH CONFIGURATION
# ==============================================================================
MIN_CONFIDENCE=0.5
LOW_CONFIDENCE_THRESHOLD=0.5
USE_RERANKING=true

# ==============================================================================
# SENDGRID (Optional - for email notifications)
# ==============================================================================
SENDGRID_ENABLED=false
SENDGRID_API_KEY=
SENDGRID_FROM_EMAIL=noreply@yourcompany.com
SENDGRID_FROM_NAME=SovereignRAG Support

# ==============================================================================
# SMTP (Alternative to SendGrid)
# ==============================================================================
SMTP_HOST=localhost
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_AUTH=true
SMTP_STARTTLS=true
SMTP_FROM_EMAIL=noreply@yourcompany.com
SMTP_FROM_NAME=SovereignRAG Support
